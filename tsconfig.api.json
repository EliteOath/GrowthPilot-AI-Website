{
  "extends": "./tsconfig.json",
  "files": [],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "noEmit": false,
    "rootDir": "api-src",
    "outDir": "api",
    "baseUrl": ".",
    
    "target": "ES2020",
   
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,

    //This overrides the root and removes vite/client
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": [],
    "paths": {
      "@shared/*": ["api-src/shared/*"],
      "@drizzle/*": ["api-src/drizzle/*"],
      "@/*": ["./__ignore__/*"]
    }
  },
  "include": ["api-src/**/*"],
  "exclude": []
}