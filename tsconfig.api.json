{
  "extends": "./tsconfig.json",
  "files": [],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "api",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,

    //This overrides the root and removes vite/client
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": [],
    "paths": {
      "../dist-backend/api/server/_core/app.js": ["./types/app"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["api-src/trpc.ts", "api-src/**/*", "shared/**/*"],
  "exclude": []
}