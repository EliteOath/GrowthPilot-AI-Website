{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "api/server",
    "outDir": "dist-backend/api/server",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["api/server/**/*"],
  "exclude": ["**/*.test.ts"]
}
