{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-backend",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false
  },
  "include": ["api/server/**/*"],
  "exclude": ["**/*.test.ts", "vite.config.ts", "api/server/_core/vite.ts"]
}
